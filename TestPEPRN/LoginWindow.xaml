<Window x:Class="TestPEPRN.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestPEPRN"
        mc:Ignorable="d"
        Title="Login to the server" Height="330" Width="600" FontFamily="Arial" FontSize="14" Background="#FFD4F7D4 " WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Label Content="Login" HorizontalAlignment="Center" Margin="0,27,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.294,1.036" FontSize="25" FontWeight="Bold"/>
        <Label Content="Email:" HorizontalAlignment="Left" Margin="50,90,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="EmailTextBox" HorizontalAlignment="Left" Margin="180,95,0,0" Width="320" VerticalAlignment="Top"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="50,138,0,0" VerticalAlignment="Top" FontSize="20"/>
        <PasswordBox x:Name="PasswordTextBox" HorizontalAlignment="Left" Margin="180,143,0,0" Width="320" VerticalAlignment="Top"/>
        <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Left" Margin="180,200,0,0" VerticalAlignment="Top" Width="140" Click="LoginButton_Click"/>

    </Grid>
</Window>
