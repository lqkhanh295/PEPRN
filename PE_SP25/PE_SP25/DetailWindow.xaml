<Window x:Class="PE_SP25.DetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PE_SP25"
        mc:Ignorable="d"
        Title="DetailWindow" Height="450" Width="800" Background="Aqua" Loaded="Window_Loaded">
    <Grid>
        <Label Content="ID" HorizontalAlignment="Left" Margin="80,106,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="IDTextBox" HorizontalAlignment="Left" Margin="140,110,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Quantity" HorizontalAlignment="Left" Margin="72,150,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="QuantityTextBox" HorizontalAlignment="Left" Margin="140,154,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Price" HorizontalAlignment="Left" Margin="80,191,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="PriceTextBox" HorizontalAlignment="Left" Margin="140,195,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="ArrivalDate" HorizontalAlignment="Left" Margin="81,232,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="DatePick" HorizontalAlignment="Left" Margin="158,234,0,0" VerticalAlignment="Top"/>
        <Label Content="SheflLife" HorizontalAlignment="Left" Margin="90,280,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="SheflLifeTextBox" HorizontalAlignment="Left" Margin="164,284,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Supplier" HorizontalAlignment="Left" Margin="96,326,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="SupplierTextBox" HorizontalAlignment="Left" Margin="164,330,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Plant" HorizontalAlignment="Left" Margin="100,376,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="PlantIdComboBox" HorizontalAlignment="Left" Margin="164,380,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="SaveButton" Content="Save" HorizontalAlignment="Left" Margin="423,317,0,0" VerticalAlignment="Top" Click="SaveButton_Click"/>

    </Grid>
</Window>
