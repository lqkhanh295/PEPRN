<Window x:Class="PE_SP25.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PE_SP25"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="Aqua" Loaded="Window_Loaded">
    <Grid>
        <DataGrid x:Name="InventoryDataGrid" Margin="10,161,200,93" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <!--Ta đang định nghĩa các cột của table với độ rộng và tên gọi theo ý của ta. Auto = True tự map tên cột DB -->
                <DataGridTextColumn Header="ID" Width="40" Binding="{Binding InventoryId}"/>
                <DataGridTextColumn Header="Quantity" Width="140" Binding="{Binding Quantity}"/>
                <DataGridTextColumn Header="Price" Width="70" Binding="{Binding Price}"/>
                <DataGridTextColumn Header="ArrivalDate" Width="70" Binding="{Binding ArrivalDate}"/>
                <DataGridTextColumn Header="ShelfLife" Width="70" Binding="{Binding ShelfLife}"/>
                <DataGridTextColumn Header="Supplier" Width="70" Binding="{Binding Supplier}"/>
                <DataGridTextColumn Header="PlantId" Width="70" Binding="{Binding PlantId}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Search" HorizontalAlignment="Left" Margin="42,116,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="231,118,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="CreateButton" Content="Create" HorizontalAlignment="Left" Margin="685,180,0,0" VerticalAlignment="Top" Click="CreateButton_Click"/>
        <Button x:Name="UpdateButton" Content="Update" HorizontalAlignment="Left" Margin="685,217,0,0" VerticalAlignment="Top" Click="UpdateButton_Click"/>
        <Button x:Name="DeleteButton" Content="Delete" HorizontalAlignment="Left" Margin="686,251,0,0" VerticalAlignment="Top" Click="DeleteButton_Click"/>
        <Button x:Name="QuitButton" Content="Quit" HorizontalAlignment="Left" Margin="686,290,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
